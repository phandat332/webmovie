@model WebMovie.Models.KHACHHANG

@{
    ViewBag.Title = "Chỉnh sửa thông tin - phimmoi24h";
}



<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h2 style="color:white">THÔNG TIN KHÁCH HÀNG</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-single" style="padding:50px 0;">
    <div class="container">
        <div class="row ipad-width">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="topbar-filter">

                </div>
                <div class="flex-wrap-movielist">
              
                </div>

            </div>

        </div>
    </div>
</div>
<div class="page-single movie-single movie_single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-5 col-sm-12 col-xs-12" style="padding-left:40px;">
                <div style="margin-left:40px;">
                    <img src="~/image/hinh-ve-co-gai-cute.jpg" alt="" style="border-radius: 60%;width:300px;float:right;">
                    <h3 style="color:white;padding:20px 0 20px 170px ">@Html.DisplayFor(model => model.Hoten)</h3>
                </div>

            </div>
            <div class="col-md-7 col-sm-12 col-xs-12" style="padding: 50px 50px 0 50px;float:right;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_title">
                                    
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <br>
                                    <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.MaKh)
                                        <div class=" form-group">
                                            <label style="color:white" class="col-form-label col-md-3 col-sm-3 label-align">
                                                Tên người dùng:
                                            </label>
                                            <div class="col-md-6 col-sm-6 ">
                                                @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class=" form-group">
                                            <label style="color:white" class="col-form-label col-md-3 col-sm-3 label-align">
                                                tài khoản
                                            </label>

                                            <div class="col-md-6 col-sm-6 ">
                                                @Html.EditorFor(model => model.Taikhoan, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class=" form-group">
                                            <label style="color:white" class="col-form-label col-md-3 col-sm-3 label-align">
                                                Email
                                            </label>
                                            <div class="col-md-6 col-sm-6">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class=" form-group">
                                            <label style="color:white" class="col-form-label col-md-3 col-sm-3 label-align">
                                                Số điện thoại
                                            </label>
                                            <div class="col-md-6 col-sm-6 ">
                                                @Html.EditorFor(model => model.DienthoaiKh, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DienthoaiKh, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class=" form-group">
                                            <label style="color:white" class="col-form-label col-md-3 col-sm-3 label-align">
                                                Mật khẩu mới
                                            </label>
                                            <div class="col-md-6 col-sm-6 ">
                                                <input type="password" name="MatKhau1" class="form-control form-control-lg" id="floatingPassword" placeholder="vd:abc123">
                                                <label for="floatingInput"></label>
                                                @ViewData["LoiCountMK"]
                                            </div>
                                        </div>
                                        <br />
                                        <div class="ln_solid"></div>
                                        <div class=" form-group">
                                            <div class="col-md-6 col-sm-6 offset-md-3">
                                                <button type="submit" class="button success-button" >Lưu</button>
                                                @Html.ActionLink("Quay lại", "Index", "Home", null, new { @class = "button primary-button" })

                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<style>
    .button {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
    }

    .primary-button {
        background-color: #007bff;
       
    }

    .success-button {
        background-color: #ff0000;
        margin-right: 60px;
    }
    .label-white {
        color: white;
    }
    .form-group{

    }
</style>