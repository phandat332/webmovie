@model IEnumerable<WebMovie.Models.THE>

@{ Layout = null; }


<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/user_assets/images/logoweb11.jpg")" />
    <title>PHIMMOI24H </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/nprogress/nprogress.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <script src="~/Scripts/daterangepicker.js"></script>
    <link href="~/Content/custom.min.css" rel="stylesheet" />
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    <script src="/path/or/uri/to/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinyMCE.init({
            mode: "textareas"

        });</script>
</head>


<body style="background-image: url('../../Content/user_assets/images/uploads/slider-bg.jpg');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card " style="margin-top:100px;">
                    <div class="card-body ">
                        <h1 class="text-center">Mua thẻ</h1>
                        <div style="padding-bottom:30px;">
                            <h1 style="color:black">Chọn gói dịch vụ phù hợp với bạn</h1>
                            <h2>+ Xem nội dung bạn muốn, không có quảng cáo</h2>
                            <h2>+ Đề xuất riêng cho bạn</h2>
                            <h2>+ Thay đổi và hủy gói dịch vụ của bạn bất cứ khi nào </h2>
                        </div>
                        <div class="container">
                            @foreach (var item in Model)
                            {
                                <a  class="buy-button" href="@Url.Action("ThemGioHang", "Thehang", new { @id = item.Mathe, @strURL = Request.Url.ToString() })" >
                                    <div >
                                        <h2><b>@item.LoaiThe</b></h2>
                                        <h2>Chất lượng video: @item.ChatLuong</h2>
                                        <h2>Độ phân giải: @item.PhanGiai</h2>
                                        <h2>giá: @item.GiaTien đ</h2>
                                    </div>
                                </a>
                            }

                        </div>
                        <div class="separator">
                            <div class="form-group row">
                                <div class="col-md-12 text-center">
                                    @Html.ActionLink("Quay lại trang chủ", "Index", "Home", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<style>
    .text {
        width: 200px;
        height: 200px;
        border: 1px solid #000;
        border-radius: 10px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }


    .buy-button {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>


