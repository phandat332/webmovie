@using PagedList;
@using PagedList.Mvc;
@using WebMovie.Models;
@model PagedList.PagedList<WebMovie.Models.PHIM>
@{
    ViewBag.Title = "SanPhamTheoHanhdong";
}

<h2>SanPhamTheoHanhdong</h2>
@foreach (var item in Model)
{
    <div class="slide-it">
        <div class="movie-item">
            <div class="mv-img">
                <img src="@Url.Content("/image/"+ item.Anhbia)" alt="@item.TenPhim" width="185" height="284">
            </div>
            <div class="hvr-inner" style="margin: 80px 40px; background-color: #ffffff00 ">
                <a href="@Url.Action("Chitiet", "Movie", new {id = item.Maphim})">
                    <img src="~/image/iconplay12.png" />
                </a>
            </div>
            <div class="title-in">
                <h6><a href="@Url.Action("Chitiet", "Movie", new {id = item.Maphim})"> @item.TenPhim </a></h6>
                <p><i class="ion-android-star"></i><span>0.00</span> /10</p>
            </div>
        </div>
    </div>
}
