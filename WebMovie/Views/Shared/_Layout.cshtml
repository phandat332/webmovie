                        else
                        {

                            <li><a href="#" style="text-transform: none;">Hỗ trợ</a></li>
                            <li class="btn"><a href="/account/login" id="hyplnkAccount" style="text-transform: none;">Đăng nhập/Đăng ký</a></li>

