                        <li><a class="btn btn-default" href="@Url.Action("LichSuXemPhim", "Account")" style="text-transform: none;">Lịch sử</a></li>

                    </ul>
                    <ul class="nav navbar-nav flex-child-menu menu-right">

                        @if (Session["TaiKhoan"] != null)
                        {

                            <li class="dropdown first btn">
                                <a class="btn btn-default dropdown-toggle lv1 navbar-brand text-white" data-toggle="dropdown" data-hover="dropdown" style="padding-top: 15px; text-transform: none;">
                                    @Session["TaiKhoan"] <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                                <ul class="dropdown-menu level1">
                                    <li><a href="/Account/Logout" style="text-transform: none;"> Đăng xuất</a></li>
                                    <li><a href="@Url.Action("Suakh","Account")" style="text-transform: none;"> chỉnh sửa</a></li>
                                    <li><a href="/Account/Logout" style="text-transform: none;"> hỗ trợ</a></li>
                                    <li><a href="@Url.Action("About","Home")" style="text-transform: none;"> Thẻ tháng</a></li>

                                </ul>
                            </li>
