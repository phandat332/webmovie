@model WebMovie.Models.KHACHHANG

@{ Layout = null; }


<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/user_assets/images/logoweb11.jpg")" />
    <title>Đăng nhập </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/nprogress/nprogress.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <script src="~/Scripts/daterangepicker.js"></script>
    <link href="~/Content/custom.min.css" rel="stylesheet" />
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    <script src="/path/or/uri/to/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinyMCE.init({
            mode: "textareas"

        });</script>
</head>


<body style="background-image: url('../../Content/user_assets/images/uploads/slider-bg.jpg');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="card " style="margin-top:100px;">
                    <div class="card-body login_content">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h1 class="text-center">Đăng nhập</h1>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group row">
                                <div class="col-md-12" style="color:red;">
                                    @ViewData["Loi"]
                                    @ViewData["Loi1"]
                                    @ViewData["Loi2"]
                                    @ViewData["ThongBao"]
                                    @ViewBag.checkTK
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Tài khoản</label>
                                <input type="text" name="TaiKhoan" class="form-control" id="TaiKhoan" placeholder="Nhập tên tài khoản">
                                @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="MatKhau">Mật khẩu</label>
                                <input type="password" name="MatKhau" class="form-control" id="MatKhau" placeholder="Nhập mật khẩu">

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12  d-flex justify-content-center">
                                        <input type="submit" value="Log in" class="btn btn-primary" />
                                        <a class="reset_pass" href="#">Quyên mật khẩu?</a>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="separator">
                            <p class="change_link text-center">
                                Bạn chưa có tài khoản?
                                @Html.ActionLink("tạo tài khoản", "Dangky", "Account")
                            </p>
                            <div class="form-group row">
                                <div class="col-md-12 text-center">
                                    @Html.ActionLink("Quay lại trang chủ", "Index", "Home", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
