@model WebMovie.ViewModel.TheloaiPhim

@{
    ViewBag.Title = "Chitietphim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="form-horizontal">
    <h2>Quản lý phim / Chi tiết </h2>
</div>

<div class="container" style="padding:60px;">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 card border rounded-4">
            <h2 class="text-center">Chi tiết quản trị viên</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">
                
                </dt>
                <dd class="col-sm-9">
                    <img src="~/image/@Model.Anhbia" style="width:350px;"/>
                </dd>
                <dt class="col-sm-3">
                    Tên phim:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenPhim)
                </dd>

                <dt class="col-sm-3">
                    Đạo diễn:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Daodien)
                </dd>

                <dt class="col-sm-3">
                    Diễn viên:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Dienvien)
                </dd>
                <dt class="col-sm-3">
                    Thể loại:
                </dt>
                <dd class="col-sm-9">
                    @string.Join(", ", Model.TheLoai)
                </dd>

                <dt class="col-sm-3">
                    Nội dung:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Noidung)
                </dd>

                <dt class="col-sm-3">
                    Độ tuổi:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Dotuoi)
                </dd>

                <dt class="col-sm-3">
                    Thời lượng phim:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Thoiluong)
                </dd>

                <dt class="col-sm-3">
                    Ngôn ngữ:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ngonngu)
                </dd>

                <dt class="col-sm-3">
                    phim:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Linkphim)
                </dd>

                <dt class="col-sm-3">
                    Trailer:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Trailer)
                </dd>

                <dt class="col-sm-3">
                    Năm phát hành
                </dt>

                <dd class="col-sm-9">
                    @string.Join("", Model.Nam)
                </dd>

                <dt class="col-sm-3">
                    Quốc gia phát hành
                </dt>

                <dd class="col-sm-9">
                    @string.Join("", Model.Quociga)
                </dd>


                <dt class="col-sm-3">
                    phim bộ (tick)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Phimbo)
                </dd>

                <dt class="col-sm-3">
                    phần phim:
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Phanphim)
                    @ViewData["Phanphim"]


                </dd>

                <dt class="col-sm-3">
                    tập số:
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tapphim)
                    @ViewData["Tapphim"]

            </dl>
            <div class="text-center">
                @Html.ActionLink("Back to page", "QLPhim", null, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Edit", "Suaphim", new { id = Model.Maphim }, new { @class = "btn btn-danger btn-xs" })
            </div>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: bold;
    }

    hr {
        border-color: #999999;
    }
</style>
